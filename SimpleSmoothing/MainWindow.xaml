<Window x:Class="SimpleSmoothing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleSmoothing" Height="350" Width="525" Loaded="Window_Loaded">
    <StackPanel>
        <TextBlock Name="xValue" Text="X value" FontSize="40" />
        <TextBlock Name="yValue" Text="Y Value" FontSize="40" />
        <RadioButton Content="Raw" IsChecked="True" Checked="RawData_Checked" GroupName="Filters" />
        <RadioButton Content="Simple Average" Checked="SimpleAverage_Checked" GroupName="Filters" />
        <RadioButton Content="Double Moving Average" Checked="DoubleMovingAverage_Checked" GroupName="Filters" />
        <RadioButton Content="Modified Double Moving Average" Checked="ModifiedDoubleMovingAverage_Checked" GroupName="Filters" />
        <RadioButton Content="Exponential Smoothing" Checked="ExponentialSmoothing_Checked" GroupName="Filters" />
        <RadioButton Content="Double Exponential Smoothing" Checked="DoubleExponentialSmoothing_Checked" GroupName="Filters" />
    </StackPanel>
</Window>
